       <div class="main-sec">
            <section class="showcase">
                <div class="slide-show">
                    <% if(posts){%>
                        <% posts.forEach(post=>{ %>
                            <div class="images my-slides">
                                <div class="img">
                                    <img src="<%= post.image%>" alt="">
                                </div>
                                <div class="name">
                                    <p><%= post.name%></p>
                                </div>
                                <div class="topic">
                                    <p><%= post.topic%></p>
                                </div>
                                <div class="body">
                                    <p><%- post.body.substring(0, 250)%></p>
                                </div>
                                <div class="readmore readmore-showcase">
                                    <a href="readmore/<%= post._id%>">read more</a>
                                </div>
                            </div>
                        <% }) %> 
                    <% } %> 
                </div>
            </section>

            <!-- ///////////////////////////////////////////// -->

            <section class="posts">
                <div class="title">
                    <h1> most popular </h1><hr><hr>
                </div>
                <div class="posts-div">
                    <% if(mainpost){%>
                        <% mainpost.forEach(post=>{ %>
                            <div class="images">
                                <div class="img">
                                    <img src="<%= post.image%>" alt="">
                                </div>
                                <div class="name">
                                    <p><%= post.name%></p>
                                </div>
                                <div class="topic">
                                    <p><%= post.topic%></p>
                                </div>
                                <div class="body">
                                    <p><%- post.body.substring(0, 150)%></p>
                                </div>
                                <div class="readmore">
                                    <a href="/readmore/<%= post._id%>">read more</a>
                                </div>
                            </div>
                        <% }) %> 
                    <% } %> 
                </div>
            </section>
        </div>        
        
        <aside class="aside">
            <div class="newsletter">
                <div class="title"> 
                    <h1>Lorem ipsum dolor sit amet.</h1>
                </div>
                <div class="input">
                    <form action="#">
                        <h3 for="newsletter">signup for our free newsletter</h3>
                        <input type="email" name="newsletter" placeholder="Enter your email address" required>
                        <input type="submit"></input>
                    </form>
                </div>
            </div>
            <section class="posts">
                <div class="title">
                    <h1> trending </h1><hr><hr>
                </div>
                <div class="posts-div">
                    <% if(posts){%>
                        <% posts.forEach(post=>{ %>
                            <div class="images">
                                <div class="img">
                                    <img src="<%= post.image%>" alt="">
                                </div>
                                <div class="name">
                                    <p><%= post.name%></p>
                                </div>
                                <div class="topic">
                                    <p><%= post.topic%></p>
                                </div>
                                <div class="body">
                                    <p><%- post.body.substring(0, 100)%></p>
                                </div>
                                <div class="readmore">
                                    <a href="/readmore/<%= post._id%>">read more</a>
                                </div>
                            </div>
                        <% }) %> 
                    <% } %> 
                </div>
            </section>
        </aside>
