<%- include ('../partials/header') %> 
<%- include ('../partials/main-nav') %> 

<header class="subnav-header">
    <div class="container">
        <!-- ///////////////////////////////////////////// -->

        <section class="posts">
            <div class="header">
                <div class="title">
                    <h1> history </h1>
                </div>
                <div class="sub-links">
                    <div class="links">
                        <a href="/history/historic events">historic events</a>
                        <a href="/history/people%20&%20civilization">people and civilization</a>
                    </div>
                </div>
            </div>
            <div class="posts-div">
                <% if(posts){%>
                    <% posts.forEach(post=>{ %>
                        <div class="images">
                            <div class="img">
                                <img src="<%= post.image%>" alt="">
                            </div>
                            <div class="name">
                                <p><%= post.name%></p>
                            </div>
                            <div class="topic">
                                <p><%= post.topic%></p>
                            </div>
                            <div class="body">
                                <p><%- post.body.substring(0, 150)%></p>
                            </div>
                            <div class="readmore">
                                <a href="/readmore/<%= post._id%>">readmore</a>
                            </div>
                        </div>
                    <% }) %> 
                <% } %> 
            </div>
        </section>
        
    </div>
</header>





<%- include ('../partials/footer') %> 
