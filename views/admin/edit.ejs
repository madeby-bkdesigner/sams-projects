<%- include ('../partials/header') %> 
<%- include ('../partials/admin-nav') %> 
    <section class="main-admin">
        <div class="container">
            <section class="edit-post">
                    <div class="fields">
                        <h1>create a post</h1>
                        <form action="/readmore/<%= post._id%>?_method=PUT" method="POST">
                            <div class="content">
                                <label for="title">title</label>
                                <input type="text" name="title" value="<%= post.title%>" required>
                            </div>
                            <div class="content">
                                <label for="image">image</label>
                                <input type="text" name="image" value="<%= post.image%>" required>
                            </div>
                            <div class="body-input">
                                <p>body</p>
                                <textarea name="body" id="body" required><%= post.body%></textarea>
                            </div>
                            <div class="topic">
                                <select name="topic" id="topic" required>
                                    <option value="">none</option>
                                    <optgroup class="optgroup" label="entertainment">
                                        <option value="funfacts">funfacts</option>
                                        <option value="movies & shows">movies & shows</option>
                                        <option value="technology">technology</option>
                                        <option value="sports & games">sports & games</option>
                                    </optgroup>                                   
                                    <optgroup class="optgroup" label="science & nature">
                                        <option value="animals">animals</option>
                                        <option value="environment">environment</option>
                                        <option value="physics">physics</option>
                                        <option value="body & health">body & health</option>

                                    </optgroup>
                                    <optgroup class="optgroup" label="history">
                                        <option value="historic events">historic events</option>
                                        <option value="people & civilization">people & civilization</option>
                                    </optgroup> 
                                </select>
                            </div>
                            <div class="btn">
                                <button type="submit"> update post</button>
                            </div>
                        </form>
                    </div>
            </section>
        </div>
    </section>
<%- include ('../partials/footer') %> 